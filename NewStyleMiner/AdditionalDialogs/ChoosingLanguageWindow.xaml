<Controls:MetroWindow x:Class="NewStyleMiner.ChoosingLanguageWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:NewStyleMiner.AdditionalDialogs"
        xmlns:Controls="http://metro.mahapps.com/winfx/xaml/controls"
        Title="Choose Language" Height="89.619" Width="244.703" WindowStartupLocation="CenterScreen" ResizeMode="NoResize" WindowStyle="ToolWindow">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"></ColumnDefinition>
            <ColumnDefinition Width="*"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        <Label Content="Choose application language" Grid.ColumnSpan="2"></Label>
        <ComboBox x:Name="LangCB" Grid.Row="1" ItemsSource="{Binding}" SelectedIndex="0"></ComboBox>
        <Button Grid.Column="1" Grid.Row="1" Content="Ok" Click="Button_Click"></Button>
    </Grid>
</Controls:MetroWindow>
